datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Set in .env
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  content   String   // Markdown content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
